{
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "es2016"],
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@style/*": ["./src/style/*"],
      "@request": ["./src/request.ts"]
    },
    "types": ["node", "webpack", "webpack-env"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
